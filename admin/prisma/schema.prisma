generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  SUPER_ADMIN
  ADMIN
  KORWIL  // Koordinator Wilayah
  USER
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String?
  phoneNumber   String?
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Scoping: KORWIL profile
  korwilProfile KorwilProfile?

  accounts      Account[]
  sessions      Session[]
  refreshTokens RefreshToken[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())
  
  @@index([userId])
  @@index([token])
}

model Team {
  id        String   @id @default(cuid())
  name      String   @unique

  korwils   KorwilProfile[]
}

model KorwilProfile {
  id               String   @id @default(cuid())
  userId           String   @unique
  nik              String   @unique

  academicTitle    String?
  position         String?

  assignedRegencyId String?
  assignedRegency   Regency? @relation("KorwilAssignedRegency", fields: [assignedRegencyId], references: [id])

  teamId           String?
  team             Team?    @relation(fields: [teamId], references: [id])

  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([teamId])
  @@index([assignedRegencyId])
}

// --- Master Data Wilayah (Indonesia) ---

model Province {
  id        String    @id
  name      String
  regencies Regency[]
}

model Regency {
  id         String     @id
  provinceId String
  name       String
  province   Province   @relation(fields: [provinceId], references: [id])
  districts  District[]
  
  // Korwil assigned ke Regency
  korwils    KorwilProfile[] @relation("KorwilAssignedRegency")

  @@index([provinceId])
}

model District {
  id        String    @id
  regencyId String
  name      String
  regency   Regency   @relation(fields: [regencyId], references: [id])
  villages  Village[]
}

model Village {
  id         String   @id
  districtId String
  name       String
  postalCode String?
  district   District @relation(fields: [districtId], references: [id])
  sppgs      SPPG[]   // SPPGs located in this village
}

// --- SPPG & Investor Data ---

model Investor {
  id           String   @id // Kode Investor
  name         String
  type         String   // Individu, Perusahaan
  email        String?
  phone        String?
  nik          String?
  
  investorCode String?  @unique // Explicit investor code requested

  sppgs        SPPG[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// --- Master Data: SPPG Status ---
model MasterStatus {
  id          Int     @id
  name        String
  description String?
  
  sppgs       SPPG[]
}

model SPPG {
  id                 String   @id // Kode Unik SPPG
  
  statusId           Int?
  status             MasterStatus? @relation(fields: [statusId], references: [id])
  
  preparationPercent Float?     // Calculated from checklist
  
  // Timeline requested
  preparationStart   DateTime?
  preparationEnd     DateTime?

  lat                Float?
  long               Float?
  postalCode         String?
  
  // Relations
  investorId         String?
  investor           Investor? @relation(fields: [investorId], references: [id])

  villageId          String?
  village            Village?  @relation(fields: [villageId], references: [id])
  
  // Location Snapshots
  provinceId         String?
  provinceName       String?
  regencyId          String?
  regencyName        String?
  districtId         String?
  districtName       String?
  villageName        String?

  checklistProgress  SPPGChecklistProgress[]

  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  
  @@index([statusId])
  @@index([investorId])
  @@index([villageId])
}

// --- Master Data: SPPG Checklist Templates ---
model MasterChecklistItem {
  id            String  @id @default(cuid())
  key           String  @unique // e.g. "foundation", "roof"
  name          String  // e.g. "Pondasi"
  description   String? // e.g. "Pondasi bangunan selesai..."
  weight        Float   // e.g. 10.0

  progressItems SPPGChecklistProgress[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// --- Transaction Data: SPPG Progress ---
model SPPGChecklistProgress {
  id              String @id @default(cuid())
  
  sppgId          String
  sppg            SPPG @relation(fields: [sppgId], references: [id], onDelete: Cascade)
  
  masterItemId    String
  masterItem      MasterChecklistItem @relation(fields: [masterItemId], references: [id])
  
  isCompleted     Boolean @default(false)
  
  updatedAt       DateTime @updatedAt

  @@unique([sppgId, masterItemId]) // One status per item per SPPG
}
